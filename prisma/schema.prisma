generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

// ... [User, Session, Account, Verification models remain unchanged] ...

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  role          String?   @default("user")
  banned        Boolean?  @default(false)
  banReason     String?
  banExpires    DateTime?
  phoneNumber   String
  sessions      Session[]
  accounts      Account[]
  bookings      Booking[]

  @@unique([email])
  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy String?

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// ---------------------------------------------------------
// TOUR PACKAGE UPDATES
// ---------------------------------------------------------

model TourPackage {
  id          String       @id @default(cuid())
  slug        String       @unique
  title       String
  description String       @db.Text
  destination String
  
  // CATEGORY (New)
  category    TourCategory @default(DOMESTIC)

  // DATE & SEATS
  startDate      DateTime
  endDate        DateTime?
  totalSeats     Int       @default(20)
  availableSeats Int

  // LOGISTICS
  durationNights Int
  durationDays   Int

  // PRICING & PICKUP (Moved to PickupOption model)
  pickupOptions PickupOption[]

  // MEDIA & LISTS
  inclusions String[]
  exclusions String[]
  images     String[]

  // RELATIONS
  itineraries Itinerary[]
  bookings    Booking[]

  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tour_package")
}

// New Model to handle variable pricing per location
model PickupOption {
  id String @id @default(cuid())

  title String // e.g. "Ex-Kolkata", "Ex-Mumbai", "Airport Pickup"

  // Prices specific to this pickup location
  priceSingleSharing Float
  priceDoubleSharing Float?
  priceTripleSharing Float?

  tourPackageId String
  tourPackage   TourPackage @relation(fields: [tourPackageId], references: [id], onDelete: Cascade)

  bookings Booking[] // Relation to track which option was chosen

  @@map("pickup_option")
}

model Itinerary {
  id String @id @default(cuid())

  day         Int
  title       String
  description String @db.Text

  tourPackageId String
  tourPackage   TourPackage @relation(fields: [tourPackageId], references: [id], onDelete: Cascade)

  @@map("itinerary")
}

model Booking {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Restrict)

  tourPackageId String
  tourPackage   TourPackage @relation(fields: [tourPackageId], references: [id], onDelete: Restrict)
  
  // SELECTION DETAILS (New)
  pickupOptionId String
  pickupOption   PickupOption @relation(fields: [pickupOptionId], references: [id], onDelete: Restrict)
  
  sharingType    SharingType  @default(DOUBLE) // To know which price tier was applied

  bookingDate DateTime @default(now())
  totalAmount Float
  contactNumber String

  // COMPLIANCE
  panNumber String?

  status        BookingStatus @default(PENDING)
  paymentId     String?
  paymentStatus PaymentStatus @default(UNPAID)

  passengers Passenger[]

  @@map("booking")
}

model Passenger {
  id String @id @default(cuid())

  name   String
  age    Int
  gender String

  bookingId String
  booking   Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
}

// ---------------------------------------------------------
// ENUMS
// ---------------------------------------------------------

enum TourCategory {
  DOMESTIC
  INTERNATIONAL
  WEEKEND
}

enum SharingType {
  SINGLE
  DOUBLE
  TRIPLE
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  FAILED
}

enum PaymentStatus {
  UNPAID
  PAID
  REFUND
  FAILED
}

// Add/Update these models

model Year {
  id         String      @id @default(cuid())
  yearNumber Int         @unique // âœ… Unique so we group albums under one year entry
  albums     TripAlbum[]
  createdAt  DateTime    @default(now())
}

model TripAlbum {
  id        String   @id @default(cuid())
  title     String
  location  String?  // Optional: e.g., "Manali"
  
  yearId    String
  year      Year     @relation(fields: [yearId], references: [id], onDelete: Cascade)
  
  images    Image[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([yearId])
}

model Image {
  id          String    @id @default(cuid())
  imageUrl    String
  
  tripAlbumId String
  tripAlbum   TripAlbum @relation(fields: [tripAlbumId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())

  @@index([tripAlbumId])
}