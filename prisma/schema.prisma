generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

// ... [User, Session, Account, Verification models remain unchanged] ...

model User {
  id            String     @id
  name          String
  email         String
  emailVerified Boolean    @default(false)
  image         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  role          String?    @default("user")
  banned        Boolean?   @default(false)
  banReason     String?
  banExpires    DateTime?
  phoneNumber   String
  sessions      Session[]
  accounts      Account[]
  votes         TourVote[]
  bookings      Booking[]
  reviews       Review[]

  @@unique([email])
  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy String?

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

// ---------------------------------------------------------
// TOUR PACKAGE UPDATES
// ---------------------------------------------------------

model TourPackage {
  id          String @id @default(cuid())
  slug        String @unique
  title       String
  description String @db.Text
  destination String

  // CATEGORY (New)
  category TourCategory @default(DOMESTIC)

  // DATE & SEATS
  startDate      DateTime
  endDate        DateTime?
  totalSeats     Int       @default(20)
  availableSeats Int

  // LOGISTICS
  durationNights Int
  durationDays   Int

  // PRICING & PICKUP (Moved to PickupOption model)
  pickupOptions PickupOption[]

  // MEDIA & LISTS
  inclusions String[]
  exclusions String[]
  images     String[]

  // RELATIONS
  itineraries Itinerary[]
  bookings    Booking[]
  reviews     Review[]

  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tour_package")
}

// ---------------------------------------------------------
// REVIEWS
// ---------------------------------------------------------

model Review {
  id String @id @default(cuid())

  rating  Int // 1 to 5
  comment String @db.Text

  //Moderation: Approve review before publish
  isPublished Boolean @default(false)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  //Optional: Link to a specific tour. If null, it's a general site review.
  tourPackageId String?
  tourPackage   TourPackage? @relation(fields: [tourPackageId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([tourPackageId])
  @@map("review")
}

// ---------------------------------------------------------
// VOTING / POLLS
// ---------------------------------------------------------

model ProposedTour {
  id          String  @id @default(cuid())
  title       String
  description String  @db.Text
  location    String
  imageUrl    String? // Optional image for the idea

  status PollStatus @default(OPEN)

  votes TourVote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("proposed_tour")
}

model TourVote {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  proposedTourId String
  proposedTour   ProposedTour @relation(fields: [proposedTourId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, proposedTourId]) // Ensures 1 user = 1 vote per tour
  @@map("tour_vote")
}

enum PollStatus {
  OPEN
  CLOSED
  PLANNED // Use this if the tour wins and you decide to create it
}

// New Model to handle variable pricing per location
model PickupOption {
  id String @id @default(cuid())

  title String // e.g. "Ex-Kolkata", "Ex-Mumbai", "Airport Pickup"

  // Prices specific to this pickup location
  priceSingleSharing Float
  priceDoubleSharing Float?
  priceTripleSharing Float?

  tourPackageId String
  tourPackage   TourPackage @relation(fields: [tourPackageId], references: [id], onDelete: Cascade)

  bookings Booking[] // Relation to track which option was chosen

  @@map("pickup_option")
}

model Itinerary {
  id String @id @default(cuid())

  day         Int
  title       String
  description String @db.Text

  tourPackageId String
  tourPackage   TourPackage @relation(fields: [tourPackageId], references: [id], onDelete: Cascade)

  @@map("itinerary")
}

model Booking {
  id String @id @default(cuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Restrict)

  tourPackageId String
  tourPackage   TourPackage @relation(fields: [tourPackageId], references: [id], onDelete: Restrict)

  // SELECTION DETAILS (New)
  pickupOptionId String
  pickupOption   PickupOption @relation(fields: [pickupOptionId], references: [id], onDelete: Restrict)

  sharingType SharingType @default(DOUBLE) // To know which price tier was applied

  bookingDate   DateTime @default(now())
  totalAmount   Float
  contactNumber String

  // COMPLIANCE
  panNumber String?

  status        BookingStatus @default(PENDING)
  paymentId     String?
  paymentStatus PaymentStatus @default(UNPAID)

  passengers Passenger[]

  @@map("booking")
}

model Passenger {
  id String @id @default(cuid())

  name   String
  age    Int
  gender String

  bookingId String
  booking   Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
}

// ---------------------------------------------------------
// ENUMS
// ---------------------------------------------------------

enum TourCategory {
  DOMESTIC
  INTERNATIONAL
  WEEKEND
}

enum SharingType {
  SINGLE
  DOUBLE
  TRIPLE
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  FAILED
}

enum PaymentStatus {
  UNPAID
  PAID
  REFUND
  FAILED
}

// 1. Define the Enum
enum AlbumCategory {
  TOURS
  PILGRIMAGE
  EVENTS
  CATERING
}

// 2. The Album Model
model Album {
  id       String  @id @default(cuid())
  title    String
  location String?

  // Directly use the Enum here
  category AlbumCategory @default(TOURS)

  images Image[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category]) // Index for faster filtering
}

model Image {
  id       String @id @default(cuid())
  imageUrl String

  albumId String
  album   Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([albumId])
}
